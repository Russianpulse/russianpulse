<% content_for :head_include do %>
   <link rel="canonical" href="<%= root_url %>" />
<% end %>

<div class="well">
  <div class="row">
    <% @posts_top.take(3).each do |post| %>
      <div class="col-sm-4">
        <%= cell("posts/high", post) %>
      </div>
    <% end %>
  </div>

  <%= cell('most_discussed').(:horizontal) %>

  <div class="row">
    <div class="col-sm-4">
      <%= cell('posts/ads') %>

      <%= cell("posts/text_block", @posts_recent[0..5]) %>
    </div>
    <% @posts_featured.in_groups(2, false) do |posts| %>
      <div class="col-sm-4">
        <%= cell("posts/triple", posts) if posts.size == 3 %>
        <hr />
      </div>
    <% end %>
  </div>

  <div class="row">
    <% (@posts_recent[6..-1] || []).in_groups(3, false) do |posts| %>
      <div class="col-sm-4">
        <%= cell("posts/text_block", posts) %>
      </div>
    <% end %>
  </div>
</div>
