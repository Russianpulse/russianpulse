<%= simple_form_for(@post, url: action_url) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :blog_id, as: :select, collection: blogs %>
    <%= f.input :title %>
    <%= f.text_area :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
