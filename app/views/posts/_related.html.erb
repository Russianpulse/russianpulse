<% posts = @post.related(limit: 4).sort_by(&:created_at).reverse.take(4) %>

<% if posts.size > 2 %>
  <h2><%= t(:previously_similar) %></h2>
  <div class="posts-compact">
    <% posts.in_groups_of(2, false) do |group| %>
      <div class="row">
        <% for post in group %>
          <div class="col-sm-6">
            <%= render :partial => 'shared/post_compact', locals: { post: post } %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

