<center>
  <%= snippet :above_header %>
</center>


<div class='row'>
  <div class='col-xs-6'>
    <span id="logo"><%= link_to snippet(:logo) || snippet(:site_name) || "Mazavr", root_path %></span>
    <br />
    <span id="time_now" title="<%= t(:last_update) %>: <%= format_date Post.order("created_at DESC").first.created_at rescue nil %>"><%= l Post.order("created_at DESC").first.created_at, format: "%e %b %Y" rescue nil  %></span>
  </div>
  <div class='col-xs-6'>
    <div class="top-nav-bar pull-right">
      <span class='top-nav-bar__item'>
        <%= link_to 'Новое', posts_path %>
      </span>
      <span class='top-nav-bar__item'>
        <%= link_to 'Популярное', posts_path(top: 1) %>
      </span>
      <span class='top-nav-bar__item'>
        <%= link_to 'Рейтинг', rating_path %>
      </span>
      <span class='top-nav-bar__item'>
        <%= link_to 'Блоги', blogs_path %>
      </span>
    </div>
  </div>
</div>

<hr />
